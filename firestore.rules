rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Helper function to check if user is the owner
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Helper function to check if user is a member of a chat room
    function isMember(memberIds) {
      return isSignedIn() && request.auth.uid in memberIds;
    }
    
    // Users collection - users can read/write their own profile
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId);
    }
    
    // Chat rooms collection
    match /chat_rooms/{roomId} {
      // Allow authenticated users to read public groups
      allow read: if isSignedIn() && (
        resource.data.isPrivate == false || 
        isMember(resource.data.memberIds)
      );
      
      // Allow members to read their private chat rooms
      allow get: if isSignedIn() && isMember(resource.data.memberIds);
      
      // Allow mentors to create group chats
      allow create: if isSignedIn() && 
        request.resource.data.type == 'group' &&
        request.auth.uid in request.resource.data.memberIds;
      
      // Allow members to update chat room (e.g., last message)
      allow update: if isSignedIn() && isMember(resource.data.memberIds);
      
      // Allow creator to delete
      allow delete: if isSignedIn() && resource.data.createdBy == request.auth.uid;
      
      // Messages subcollection
      match /messages/{messageId} {
        // Members can read messages in rooms they belong to
        allow read: if isSignedIn() && isMember(get(/databases/$(database)/documents/chat_rooms/$(roomId)).data.memberIds);
        
        // Members can create messages
        allow create: if isSignedIn() && 
          isMember(get(/databases/$(database)/documents/chat_rooms/$(roomId)).data.memberIds) &&
          request.resource.data.senderId == request.auth.uid;
        
        // Sender can update/delete their own messages
        allow update, delete: if isSignedIn() && resource.data.senderId == request.auth.uid;
      }
    }
    
    // Chat requests collection (for mentor connection requests)
    match /chat_requests/{requestId} {
      // Users can read requests they sent or received
      allow read: if isSignedIn() && (
        resource.data.requesterId == request.auth.uid ||
        resource.data.targetUserId == request.auth.uid
      );
      
      // Students can create requests
      allow create: if isSignedIn() && request.resource.data.requesterId == request.auth.uid;
      
      // Target users (mentors) can update requests (accept/decline)
      allow update: if isSignedIn() && resource.data.targetUserId == request.auth.uid;
      
      // Requester can delete their own requests
      allow delete: if isSignedIn() && resource.data.requesterId == request.auth.uid;
    }
    
    // Mood entries collection
    match /mood_entries/{entryId} {
      allow read, write: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
    }
    
    // Journal entries collection
    match /journal_entries/{entryId} {
      allow read, write: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
    }
    
    // Default: deny all access to other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
